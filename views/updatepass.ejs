<body>
    <%-include('header')%>
        <div class="container" >
    <div class="col-md-6" >
        <div id="logbox"  >
          <%if(alert!=""){%>
            <div class="alert alert-success">
  <strong>Success!</strong> <%=alert%>
</div>
            <%}%>
            <form  action="/view_all_password/edit" method="post">
                <h1>Password for respective category</h1>
                <input type="hidden" name="id" value="<%=records._id%>" required>
				 <input name="password" type="text" placeholder="Enter password" class="input pass" value="<%=records.password%>" required/>
                <input name="passDetails" type="text" placeholder="Enter password details('can be a URL to which it belongs')" required="required" class="input pass" value="<%=records.passDetails%>"/>
             
                <select name="categoryname" class="input pass"class="input pass"  type="text" required>
       
                  <option value="<%=records.categoryname%>"><%=records.categoryname%></option>
       
                </select>
                
                <input type="submit" value="Add Password" class="inputButton"/>
                <p><a href="/view_all_password">view all password</a></p>

            </form>
        </div>
    </div>
  


