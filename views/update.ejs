<body>
     <%-include('header')%>
        <div class="container" >
    <div class="col-md-6" >
        <div id="logbox"  >
            <form  action="/view_all_category" method="post" >
                <h1>Add new Category</h1>
                <%if(errors!=""){%>
                  <p class="text-center text-danger"><%=errors.categoryname.msg%></p>
                <%}%>
                <%if(success!=""){%>
                  <div class="alert alert-success">
  <strong>Success!</strong> <%=success%>
</div>
                <%}%>
                <input type="hidden" value="<%=records._id%>" name="id" required>
				 <input name="categoryname" type="text" placeholder="Add new Category" class="input pass" value="<%=records.categoryname%>" required/>
                               <input type="submit" value="Update category" class="inputButton"/>

            </form>
            <a href="/view_all_category">View all category list</a>
        </div>
    </div>
